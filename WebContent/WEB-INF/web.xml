<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>AdmissionCommission</display-name>
   <filter>
    <filter-name>SetCharacterEncodingFilter</filter-name>
    <filter-class>com.admissioncommission.filter.SetCharacterEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SetCharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>/WEB-INF/jsp/index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>com.admissioncommission.controller.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/Controller</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>applicant</servlet-name>
    <jsp-file>/WEB-INF/jsp/applicant.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>applicant</servlet-name>
    <url-pattern>/applicant</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>admin</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>rejectedApplications</servlet-name>
    <jsp-file>/WEB-INF/jsp/rejectedApplications.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>rejectedApplications</servlet-name>
    <url-pattern>/rejectedApplications</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>changeAdministratorInformation</servlet-name>
    <jsp-file>/WEB-INF/jsp/changeAdministratorInformation.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>changeAdministratorInformation</servlet-name>
    <url-pattern>/changeAdministratorInformation</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>changeApplicantInformation</servlet-name>
    <jsp-file>/WEB-INF/jsp/changeApplicantInformation.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>changeApplicantInformation</servlet-name>
    <url-pattern>/changeApplicantInformation</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>changeStudentInformation</servlet-name>
    <jsp-file>/WEB-INF/jsp/changeStudentInformation.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>changeStudentInformation</servlet-name>
    <url-pattern>/changeStudentInformation</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>error</servlet-name>
    <jsp-file>/WEB-INF/jsp/error.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>error</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>
  <error-page>
	    <error-code>404</error-code>
	    <location>/error</location>
	</error-page>
	<error-page>
	    <error-code>403</error-code>
	    <location>/error</location>
	</error-page>
	<error-page>
	    <error-code>500</error-code>
	    <location>/error</location>
	</error-page>
  <servlet>
    <servlet-name>faculty</servlet-name>
    <jsp-file>/WEB-INF/jsp/faculty.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>faculty</servlet-name>
    <url-pattern>/faculty</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>registration</servlet-name>
    <jsp-file>/WEB-INF/jsp/registration.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>student</servlet-name>
    <jsp-file>/WEB-INF/jsp/student.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>student</servlet-name>
    <url-pattern>/student</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>newAdministrator</servlet-name>
    <jsp-file>/WEB-INF/jsp/newAdministrator.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>newAdministrator</servlet-name>
    <url-pattern>/newAdmin</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <filter>
    <filter-name>LocalizationFilter</filter-name>
    <filter-class>com.admissioncommission.filter.LocalizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LocalizationFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>AdministratorAccessFilter</filter-name>
    <filter-class>com.admissioncommission.filter.AdministratorAccessFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdministratorAccessFilter</filter-name>
    <url-pattern>/admin</url-pattern>
    <url-pattern>/newAdmin</url-pattern>
    <url-pattern>/changeAdministratorInformation</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>ApplicantAccessFilter</filter-name>
    <filter-class>com.admissioncommission.filter.ApplicantAccessFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ApplicantAccessFilter</filter-name>
    <url-pattern>/applicant</url-pattern>
    <url-pattern>/faculty</url-pattern>
    <url-pattern>/changeApplicantInformation</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>StudentAccessFilter</filter-name>
    <filter-class>com.admissioncommission.filter.StudentAccessFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>StudentAccessFilter</filter-name>
    <url-pattern>/student</url-pattern>
    <url-pattern>/changeStudentInformation</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>ValidationFilter</filter-name>
    <filter-class>com.admissioncommission.filter.ValidationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ValidationFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <jsp-config>
    <taglib>
      <taglib-uri>/WEB-INF/myTagLib.tld</taglib-uri>
      <taglib-location>/WEB-INF/myTagLib.tld</taglib-location>
    </taglib>
  </jsp-config>
  <resource-ref>
    <res-ref-name>jdbc/connection</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>